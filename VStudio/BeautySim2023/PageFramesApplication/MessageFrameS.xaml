<Page x:Class="BeautySim2023.MessageFrameS"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     xmlns:local="clr-namespace:BeautySim2023"
            xmlns:extoolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
      xmlns:toolkit="http://schemas.microsoft.com/wpf/2008/toolkit"
      Title="MessageFrameS" Background="Transparent">

    <Page.Resources>
    </Page.Resources>

    <Grid Name="grMain">
        <Grid.RowDefinitions>
            <RowDefinition Height="150" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Name="tbHeader" Grid.Row="0" Margin="30"
                   Text="Questo è un messaggio di prova" FontSize="60" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center">
        </TextBlock>
        <ScrollViewer Name="scMessage" Margin="50" Grid.Row="1">
            <TextBlock Name="tbMessage" Margin="30"
                   Text="Questo è un messaggio di prova" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center">
            </TextBlock>
        </ScrollViewer>
    </Grid>
</Page>